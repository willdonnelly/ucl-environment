(package ucl-environment)
(version 0 1)
(category "UCL")

(synopsis "Query and modify the environment")
(description "Uses ucl-ffi to bind to the libc environment \
              variable functions. Provides minimal wrappers \
              around getenv, setenv, and unsetenv.")

(author "Will Donnelly")
(email "wgd@willdonnelly.net")
(url "http://github.com/willdonnelly/ucl-environment")

(license BSD3)
(license-file "LICENSE")

(code "ucl/environment.sls")

(depends ucl-ffi)

(schemes ikarus larceny mosh racket ypsilon)
